function headMaster_access($op, $node, $account) {
	if($op == 'update' || $op == 'delete') {
		//&& ($account->uid == $node->uid)
		if (user_access('edit headMaster', $account) ) {
			return TRUE;
		}
	}
	if (($op=='create') && ($op='list')) {
		return user_access('create headMaster', $account);
	}
	if (($op=='view') or ($op=='list')) {
		return user_access('view headMaster', $account);
	}
}
 
