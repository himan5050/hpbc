function getcode($code){
  $sql = "select * from {tbl_headmaster} where code='".$code."'  ";
  $res = db_query($sql);
  $rs = db_fetch_object($res);
  $nid=$node->nid;
 
  if ($rs->code=='' )
  return 0;
  else 
  return $rs;
   
}

function getcode_edit($code,$prev_code){
  $sql = "select * from {tbl_headmaster} where code='".$code."' AND code != '".$prev_code."'  ";
  $res = db_query($sql);
  $rs = db_fetch_object($res);
  $nid=$node->nid;
 
  if ($rs->code=='' )
  return 0;
  else
  return $rs;
   
}



