function dsje_category_access($op, $node, $account) {
	if($op == 'update' || $op == 'delete') {
		//&& ($account->uid == $node->uid)
		if (user_access('edit dsje_category', $account) ) {
			return TRUE;
		}
	}
	if (($op=='create') && ($op='list')) {
		return user_access('create dsje_category', $account);
	}
	if (($op=='view') or ($op=='list')) {
		return user_access('view dsje_category', $account);
	}
	
}

