	 }
	
	
	
	 $query = "SELECT category_id, category_name, status FROM tbl_categories where ".$searchquery." ".tablesort_sql($header);
	 $sqlcount = "SELECT COUNT(*) AS count  FROM tbl_categories where ".$searchquery." ".tablesort_sql($header);
	$rscount = db_query($sqlcount);
	$rscounter = db_fetch_object($rscount);
 }else{
    $query = "SELECT category_id, category_name, status FROM tbl_categories ".tablesort_sql($header);
 }
 
 global $base_url;
$action = $base_url.'/admin/dsje/listcategory';

 $t1=$_POST['searchtextstatus'];
$selected0 ="";
$selected1 ="";


if($_REQUEST['searchtextstatus'] !=''){
	
	if($_REQUEST['searchtextstatus'] == 0){
	  $selected0 ="selected = selected"; 
	}
	
	if($_REQUEST['searchtextstatus'] == 1){
	  $selected1  ="selected =  selected"; 
	}
}else{
$selected0 ="";
$selected1 ="";
}


 $output = '<form method="POST" action="'.$action.'"><table width="100%" border="0" cellspacing="1" cellpadding="1" id="wrapper">
