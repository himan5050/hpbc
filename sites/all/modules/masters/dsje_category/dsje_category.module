function dsje_category_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$category_id = $values['category_id'];
	$category_name = ParseData($values['category_name']);
	$prev_category_name = ParseData($values['prev_category_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('category_name',$category_name,'category');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_categories} where LOWER(category_name)= '".strtolower($category_name)."' GROUP BY category_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_category_name), strtolower($category_name))==0){
			db_query("UPDATE `tbl_categories` set `category_name` = '".$category_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where category_id='".$category_id."'");
			
			$message = getMessage('dsjecategory', 'code11', array("0"=>$category_name));
			drupal_set_message($message);
			drupal_goto("admin/dsje/listcategory");	
			
		}else{
			if($count==0){
				db_query("UPDATE `tbl_categories` set `category_name` = '".$category_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where category_id='".$category_id."'");
				
				$message = getMessage('dsjecategory', 'code11', array("0"=>$category_name));
				drupal_set_message($message);
				drupal_goto("admin/dsje/listcategory");	
			
			}else{
				db_query("UPDATE `tbl_categories` set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where category_id='".$category_id."'");
				
				$message = getMessage('dsjecategory', 'code06', array("0"=>$category_name));
				form_set_error('category_name', $message);
			}
		}
	}
}

