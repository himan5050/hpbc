function dsje_religion_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$religion_id = $values['religion_id'];
	$religion_name = ParseData($values['religion_name']);
	$prev_religion_name = ParseData($values['prev_religion_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('religion_name',$religion_name,'religion');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_religions} where LOWER(religion_name)= '".strtolower($religion_name)."' GROUP BY religion_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_religion_name), strtolower($religion_name))==0){
			db_query("UPDATE `tbl_religions` set `religion_name` = '".$religion_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where religion_id='".$religion_id."'");
			
			$message = getMessage('dsjereligion', 'code05', array("0"=>$religion_name));
			drupal_set_message($message);
			drupal_goto("admin/dsje/listreligion");	
			
		}else{
			if($count==0){
				db_query("UPDATE `tbl_religions` set `religion_name` = '".$religion_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where religion_id='".$religion_id."'");
				
				$message = getMessage('dsjereligion', 'code05', array("0"=>$religion_name));
				drupal_set_message($message);
				drupal_goto("admin/dsje/listreligion");	
			
			}else{
				db_query("UPDATE `tbl_religions` set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where religion_id='".$religion_id."'");
				
				$message = getMessage('dsjereligion', 'code06', array("0"=>$religion_name));
				form_set_error('religion_name', $message);
			}
		}
	}
}

