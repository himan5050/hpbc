function dsje_testModule_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$testModule_id = $values['testModule_id'];
	$testModule_name = ParseData($values['testModule_name']);
	$prev_testModule_name = ParseData($values['prev_testModule_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('testModule_name',$testModule_name,'testModule');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_testModules} where LOWER(testModule_name)= '".strtolower($testModule_name)."' GROUP BY testModule_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_testModule_name), strtolower($testModule_name))==0){
			db_query("UPDATE `tbl_testModules` set `testModule_name` = '".$testModule_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where testModule_id='".$testModule_id."'");
			
			$message = getMessage('dsjetestModule', 'code05', array("0"=>$testModule_name));
			drupal_set_message($message);
			drupal_goto("dsje/listtestModule");	
			
		}else{
			if($count==0){
				db_query("UPDATE `tbl_testModules` set `testModule_name` = '".$testModule_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where testModule_id='".$testModule_id."'");
				
				$message = getMessage('dsjetestModule', 'code05', array("0"=>$testModule_name));
				drupal_set_message($message);
				drupal_goto("dsje/listtestModule");	
			
			}else{
				db_query("UPDATE `tbl_testModules` set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where testModule_id='".$testModule_id."'");
				
				$message = getMessage('dsjetestModule', 'code06', array("0"=>$testModule_name));
				form_set_error('testModule_name', $message);
			}
		}
	}
}

