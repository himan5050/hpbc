    $testModule_name = trim($values['testModule_name']);
	$remarks = parseData(trim($values['remarks']));
    $status = $values['status'];
	$createdby = $user->uid;
	$createdon = time();
   
	
	$s = textonlyn('testModule_name',$testModule_name,'testModule');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
		db_query("INSERT INTO `tbl_testModules` (`testModule_name`,`status` ,`createdby` ,`createdon`,`updatedby` ,`updatedon`,`remarks`) VALUES('".$testModule_name."','".$status."','".$createdby."','".$createdon."','".$createdby."','".$createdon."','".$remarks."') ");
	   
