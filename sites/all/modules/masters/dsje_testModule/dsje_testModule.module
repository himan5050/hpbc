function viewtestModule(){
global $user;
global $base_url;
$limit = (int)getMessage( 'dsjetestModule', 'code04', NULL);
  
  $header = array(
		array('data' => t('S.No')),
        array('data' => t('testModule'), 'field' => 'testModule_name', 'sort' => 'asc'),
		array('data' => t('Status')),
		array('data' => t('Action')),
	);
	
	
   
    if(isset($_REQUEST['searchtext']) && $_REQUEST['searchtext']!=''){
    $val = '%'.strtoupper($_REQUEST['searchtext']).'%';	 
	 $query = "SELECT testModule_id, testModule_name, status FROM tbl_testModules where UPPER(testModule_name) LIKE '".$val."' ".tablesort_sql($header);
	$sqlcount = "SELECT COUNT(*) AS count  FROM tbl_testModules where UPPER(testModule_name) LIKE '".$val."' ".tablesort_sql($header);
	$rscount = db_query($sqlcount);
	$rscounter = db_fetch_object($rscount);
 }else{
    $query = "SELECT testModule_id, testModule_name, status FROM tbl_testModules ".tablesort_sql($header);
 }
 $output = '<form method="POST" action=""><table width="100%" border="0" cellspacing="1" cellpadding="1" id="wrapper">
	<tr><td colspan="3" class="tblHeaderLeft">';
	if(isset($_REQUEST['searchtext']) && $_REQUEST['searchtext']!=''){
	$output .= t(getMessage( 'dsjetestModule', 'code03', array("0"=>$rscounter->count)))." | ".l('View All','dsje/listtestModule');
	}
	
	$output .='</td><td colspan="3" class="tblHeaderRight">
	<input type="text" name="searchtext" value="'.$_POST['searchtext'].'">
	<input type="submit" name="search" value="Go"></td></tr>';
	
	$addurl = l(getMessage( 'dsjetestModule', 'code01', NULL),"dsje/listtestModule/addtestModule");
   	$lising = getMessage( 'dsjetestModule', 'code02', NULL);
		
	$output .='<tr>
	<td colspan="3" class="tblHeaderLeft">'.$lising.'</td>
	<td colspan="3" class="tblHeaderRight">'.$addurl.'</td>
	</tr>
	</table></form>';

	$result = pager_query($query, $limit);

	if($_REQUEST['page']){
     $counter = $_REQUEST['page']*$limit;
	}else{
	 $counter = 0;
    }
	while($row=db_fetch_object($result)) {
		$counter++;
		$editurl = l("Edit","dsje/listtestModule/edit/testModule/".$row->testModule_id,array('attributes'=>array('id'=>'edit-testModule-id')));
		$viewurl = l("View","dsje/listtestModule/view/testModule/".$row->testModule_id);
		
		if($row->status=='1'){
		  $deleteurl = l("Disable","dsje/del/testModule/$row->testModule_id/$row->testModule_name");
        }else{
		  $deleteurl = l("Enable","dsje/enable/testModule/$row->testModule_id/$row->testModule_name");
		
		}


		if($row->status=='1'){
		       $st='Enabled';
		    }else{
			   $st ='Disabled';
			}
		$rows[] = array(
			
			array('data' => $counter),
			array('data' => ucwords($row->testModule_name)),
			array('data' => $st),
			array('data' => $viewurl."|".$editurl."|".$deleteurl),
		);
	}
	$output .= theme_table($header,$rows, $attributes = array(), $caption = NULL);
	$output .= theme('pager', NULL, $limit,0 );
	return $output;
 }

