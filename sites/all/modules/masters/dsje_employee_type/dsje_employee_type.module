function viewemployee_type(){
global $user;
global $base_url;
$limit = (int)getMessage( 'dsjeemployee_type', 'code04', NULL);
  
  $header = array(
		array('data' => t('S.No')),
        array('data' => t('employee_type'), 'field' => 'employee_type_name', 'sort' => 'asc'),
		array('data' => t('Status')),
		array('data' => t('Action')),
	);
	$breadcrumb = array();
    $breadcrumb[] = l('Home', '<front>');
   
    if($array[0] == '' ) {
     $breadcrumb[] = l('List employee_type', 'admin/dsje/listemployee_type/'.$array[3].'');
	 }  
	 drupal_set_breadcrumb($breadcrumb);
	
   
    if(isset($_REQUEST['searchtext']) && $_REQUEST['searchtext']!=''){
    $val = '%'.strtoupper($_REQUEST['searchtext']).'%';	 
	 $query = "SELECT employee_type_id, employee_type_name, status FROM tbl_employees where UPPER(employee_type_name) LIKE '".$val."' ".tablesort_sql($header);
	$sqlcount = "SELECT COUNT(*) AS count  FROM tbl_employees where UPPER(employee_type_name) LIKE '".$val."' ".tablesort_sql($header);
	$rscount = db_query($sqlcount);
	$rscounter = db_fetch_object($rscount);
 }else{
    $query = "SELECT employee_type_id, employee_type_name, status FROM tbl_employees ".tablesort_sql($header);
 }
 $output = '<form method="POST" action=""><table width="100%" border="0" cellspacing="1" cellpadding="1" id="wrapper">
	<tr><td colspan="3" class="tblHeaderLeft">';
	if(isset($_REQUEST['searchtext']) && $_REQUEST['searchtext']!=''){
	$output .= t(getMessage( 'dsjeemployee_type', 'code03', array("0"=>$rscounter->count)))." | ".l('View All','admin/dsje/listemployee_type');
	}
	
	$output .='</td><td colspan="3" class="tblHeaderRight">
	<input type="text" name="searchtext" value="'.$_POST['searchtext'].'">
	<input type="submit" name="search" value="Go"></td></tr>';
	
	$addurl = l(getMessage( 'dsjeemployee_type', 'code01', NULL),"admin/dsje/listemployee_type/addemployee_type");
   	$lising = getMessage( 'dsjeemployee_type', 'code02', NULL);
		
	$output .='<tr>
	<td colspan="3" class="tblHeaderLeft">'.$lising.'</td>
	<td colspan="3" class="tblHeaderRight">'.$addurl.'</td>
	</tr>
	</table></form>';

	$result = pager_query($query, $limit);

	if($_REQUEST['page']){
     $counter = $_REQUEST['page']*$limit;
	}else{
	 $counter = 0;
    }
	while($row=db_fetch_object($result)) {
		$counter++;
		$editurl = l("Edit","admin/dsje/listemployee_type/edit/employee_type/".$row->employee_type_id,array('attributes'=>array('id'=>'edit-employee_type-id')));
		$viewurl = l("View","admin/dsje/listemployee_type/view/employee_type/".$row->employee_type_id);
		
		if($row->status=='1'){
		  $deleteurl = l("Disable","admin/dsje/del/employee_type/$row->employee_type_id/$row->employee_type_name");
        }else{
		  $deleteurl = l("Enable","admin/dsje/enable/employee_type/$row->employee_type_id/$row->employee_type_name");
		
		}


		if($row->status=='1'){
		       $st='Enabled';
		    }else{
			   $st ='Disabled';
			}
		$rows[] = array(
			
			array('data' => $counter),
			array('data' => ucwords($row->employee_type_name)),
			array('data' => $st),
			array('data' => $viewurl."|".$editurl."|".$deleteurl),
		);
	}
	
	if(isset($_REQUEST['searchtext']) && $_REQUEST['searchtext']!=''){}else{
	$output .= theme_table($header,$rows, $attributes = array(), $caption = NULL);
	$output .= theme('pager', NULL, $limit,0 );}
	return $output;
 }

