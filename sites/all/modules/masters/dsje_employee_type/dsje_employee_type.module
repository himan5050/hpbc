function dsje_employee_type_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$employee_type_id = $values['employee_type_id'];
	$employee_type_name = ParseData($values['employee_type_name']);
	$prev_employee_type_name = ParseData($values['prev_employee_type_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('employee_type_name',$employee_type_name,'employee_type');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_employees} where LOWER(employee_type_name)= '".strtolower($employee_type_name)."' GROUP BY employee_type_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_employee_type_name), strtolower($employee_type_name))==0){
			db_query("UPDATE `tbl_employees` set `employee_type_name` = '".$employee_type_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where employee_type_id='".$employee_type_id."'");
			
			$message = getMessage('dsjeemployee_type', 'code05', array("0"=>$employee_type_name));
			drupal_set_message($message);
			drupal_goto("admin/dsje/listemployee_type");	
			
		}else{
			if($count==0){
				db_query("UPDATE `tbl_employees` set `employee_type_name` = '".$employee_type_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where employee_type_id='".$employee_type_id."'");
				
				$message = getMessage('dsjeemployee_type', 'code05', array("0"=>$employee_type_name));
				drupal_set_message($message);
				drupal_goto("admin/dsje/listemployee_type");	
			
			}else{
				db_query("UPDATE `tbl_employees` set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where employee_type_id='".$employee_type_id."'");
				
				$message = getMessage('dsjeemployee_type', 'code06', array("0"=>$employee_type_name));
				form_set_error('employee_type_name', $message);
			}
		}
	}
}

