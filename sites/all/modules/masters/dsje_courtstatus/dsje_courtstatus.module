function viewcourtstatus(){
global $user;
global $base_url;
$limit = (int)getMessage( 'dsjecourtstatus', 'code04', NULL);
  
  $header = array(
		array('data' => t('S.No')),
        array('data' => t('courtstatus'), 'field' => 'courtstatus_name', 'sort' => 'asc'),
		array('data' => t('Status')),
		array('data' => t('Action')),
	);
	$breadcrumb = array();
    $breadcrumb[] = l('Home', '<front>');
   
    if($array[0] == '' ) {
     $breadcrumb[] = l('List courtstatus', 'admin/dsje/listcourtstatus/'.$array[3].'');
	 }  
	 drupal_set_breadcrumb($breadcrumb);
	
   
    if(isset($_REQUEST['searchtext']) && $_REQUEST['searchtext']!=''){
    $val = '%'.strtoupper($_REQUEST['searchtext']).'%';	 
	 $query = "SELECT courtstatus_id, courtstatus_name, status FROM tbl_courtstatus where UPPER(courtstatus_name) LIKE '".$val."' ORDER BY courtstatus_name ASC ".tablesort_sql($header);
	$sqlcount = "SELECT COUNT(*) AS count  FROM tbl_courtstatus where UPPER(courtstatus_name) LIKE '".$val."' ".tablesort_sql($header);
	$rscount = db_query($sqlcount);
	$rscounter = db_fetch_object($rscount);
 }else{
    $query = "SELECT courtstatus_id, courtstatus_name, status FROM tbl_courtstatus ".tablesort_sql($header);
 }
 $output = '<form method="POST" action=""><table width="100%" border="0" cellspacing="1" cellpadding="1" id="wrapper">
	<tr><td colspan="3" class="tblHeaderLeft">';
	if(isset($_REQUEST['searchtext']) && $_REQUEST['searchtext']!=''){
	$output .= t(getMessage( 'dsjecourtstatus', 'code03', array("0"=>$rscounter->count)))." | ".l('View All','admin/dsje/listcourtstatus');
	}
	
	$output .='</td><td colspan="3" class="tblHeaderRight">
	<input type="text" name="searchtext" value="'.$_POST['searchtext'].'">
	<input type="submit" name="search" value="Go"></td></tr>';
	
	$addurl = l(getMessage( 'dsjecourtstatus', 'code01', NULL),"admin/dsje/listcourtstatus/addcourtstatus");
   	$lising = getMessage( 'dsjecourtstatus', 'code02', NULL);
		
	$output .='<tr>
	<td colspan="3" class="tblHeaderLeft">'.$lising.'</td>
	<td colspan="3" class="tblHeaderRight">'.$addurl.'</td>
	</tr>
	</table></form>';

	$result = pager_query($query, $limit);

	if($_REQUEST['page']){
     $counter = $_REQUEST['page']*$limit;
	}else{
	 $counter = 0;
    }
	while($row=db_fetch_object($result)) {
		$counter++;
		$editurl = l("Edit","admin/dsje/listcourtstatus/edit/courtstatus/".$row->courtstatus_id,array('attributes'=>array('id'=>'edit-courtstatus-id')));
		$viewurl = l("View","admin/dsje/listcourtstatus/view/courtstatus/".$row->courtstatus_id);
		
		if($row->status=='1'){
		  $deleteurl = l("Disable","admin/dsje/del/courtstatus/$row->courtstatus_id/$row->courtstatus_name");
        }else{
		  $deleteurl = l("Enable","admin/dsje/enable/courtstatus/$row->courtstatus_id/$row->courtstatus_name");
		
		}


		if($row->status=='1'){
		       $st='Enabled';
		    }else{
			   $st ='Disabled';
			}
		$rows[] = array(
			
			array('data' => $counter),
			array('data' => ucwords($row->courtstatus_name)),
			array('data' => $st),
			array('data' => $viewurl."|".$editurl."|".$deleteurl),
		);
	}
	$output .= theme_table($header,$rows, $attributes = array(), $caption = NULL);
	$output .= theme('pager', NULL, $limit,0 );
	return $output;
 }

