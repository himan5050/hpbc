function dsje_courtstatus_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$courtstatus_id = $values['courtstatus_id'];
	$courtstatus_name = ParseData($values['courtstatus_name']);
	$prev_courtstatus_name = ParseData($values['prev_courtstatus_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('courtstatus_name',$courtstatus_name,'courtstatus');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_courtstatus} where LOWER(courtstatus_name)= '".strtolower($courtstatus_name)."' GROUP BY courtstatus_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_courtstatus_name), strtolower($courtstatus_name))==0){
			db_query("UPDATE `tbl_courtstatus` set `courtstatus_name` = '".$courtstatus_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where courtstatus_id='".$courtstatus_id."'");
			
			$message = getMessage('dsjecourtstatus', 'code05', array("0"=>$courtstatus_name));
			drupal_set_message($message);
			drupal_goto("admin/dsje/listcourtstatus");	
			
		}else{
			if($count==0){
				db_query("UPDATE `tbl_courtstatus` set `courtstatus_name` = '".$courtstatus_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where courtstatus_id='".$courtstatus_id."'");
				
				$message = getMessage('dsjecourtstatus', 'code05', array("0"=>$courtstatus_name));
				drupal_set_message($message);
				drupal_goto("admin/dsje/listcourtstatus");	
			
			}else{
				db_query("UPDATE `tbl_courtstatus` set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where courtstatus_id='".$courtstatus_id."'");
				
				$message = getMessage('dsjecourtstatus', 'code06', array("0"=>$courtstatus_name));
				form_set_error('courtstatus_name', $message);
			}
		}
	}
}

