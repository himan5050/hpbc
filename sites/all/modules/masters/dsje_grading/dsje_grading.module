function dsje_grading_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$grading_id = $values['grading_id'];
	$grading_name = ParseData($values['grading_name']);
	$prev_grading_name = ParseData($values['prev_grading_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('grading_name',$grading_name,'grading');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_gradings} where LOWER(grading_name)= '".strtolower($grading_name)."' GROUP BY grading_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_grading_name), strtolower($grading_name))==0){
			db_query("UPDATE `tbl_gradings` set `grading_name` = '".$grading_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where grading_id='".$grading_id."'");
			
			$message = getMessage('dsjegrading', 'code05', array("0"=>$grading_name));
			drupal_set_message($message);
			drupal_goto("admin/dsje/listgrading");	
			
		}else{
			if($count==0){
				db_query("UPDATE `tbl_gradings` set `grading_name` = '".$grading_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where grading_id='".$grading_id."'");
				
				$message = getMessage('dsjegrading', 'code05', array("0"=>$grading_name));
				drupal_set_message($message);
				drupal_goto("admin/dsje/listgrading");	
			
			}else{
				db_query("UPDATE `tbl_gradings` set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where grading_id='".$grading_id."'");
				
				$message = getMessage('dsjegrading', 'code06', array("0"=>$grading_name));
				form_set_error('grading_name', $message);
			}
		}
	}
}

