function viewgrading(){
global $user;
global $base_url;
$limit = (int)getMessage( 'dsjegrading', 'code04', NULL);
  
  $header = array(
		array('data' => t('S.No')),
        array('data' => t('grading'), 'field' => 'grading_name', 'sort' => 'asc'),
		array('data' => t('Status')),
		array('data' => t('Action')),
	);
	$breadcrumb = array();
    $breadcrumb[] = l('Home', '<front>');
   
    if($array[0] == '' ) {
     $breadcrumb[] = l('List grading', 'admin/dsje/listgrading/'.$array[3].'');
	 }  
	 drupal_set_breadcrumb($breadcrumb);
	
   
    if(isset($_REQUEST['searchtext']) && $_REQUEST['searchtext']!=''){
    $val = '%'.strtoupper($_REQUEST['searchtext']).'%';	 
	 $query = "SELECT grading_id, grading_name, status FROM tbl_gradings where UPPER(grading_name) LIKE '".$val."' ".tablesort_sql($header);
	$sqlcount = "SELECT COUNT(*) AS count  FROM tbl_gradings where UPPER(grading_name) LIKE '".$val."' ".tablesort_sql($header);
	$rscount = db_query($sqlcount);
	$rscounter = db_fetch_object($rscount);
 }else{
    $query = "SELECT grading_id, grading_name, status FROM tbl_gradings ".tablesort_sql($header);
 }
 $output = '<form method="POST" action=""><table width="100%" border="0" cellspacing="1" cellpadding="1" id="wrapper">
	<tr><td colspan="3" class="tblHeaderLeft">';
	if(isset($_REQUEST['searchtext']) && $_REQUEST['searchtext']!=''){
	$output .= t(getMessage( 'dsjegrading', 'code03', array("0"=>$rscounter->count)))." | ".l('View All','admin/dsje/listgrading');
	}
	
	$output .='</td><td colspan="3" class="tblHeaderRight">
	<input type="text" name="searchtext" value="'.$_POST['searchtext'].'">
	<input type="submit" name="search" value="Go"></td></tr>';
	
	$addurl = l(getMessage( 'dsjegrading', 'code01', NULL),"admin/dsje/listgrading/addgrading");
   	$lising = getMessage( 'dsjegrading', 'code02', NULL);
		
	$output .='<tr>
	<td colspan="3" class="tblHeaderLeft">'.$lising.'</td>
	<td colspan="3" class="tblHeaderRight">'.$addurl.'</td>
	</tr>
	</table></form>';

	$result = pager_query($query, $limit);

	if($_REQUEST['page']){
     $counter = $_REQUEST['page']*$limit;
	}else{
	 $counter = 0;
    }
	while($row=db_fetch_object($result)) {
		$counter++;
		$editurl = l("Edit","admin/dsje/listgrading/edit/grading/".$row->grading_id,array('attributes'=>array('id'=>'edit-grading-id')));
		$viewurl = l("View","admin/dsje/listgrading/view/grading/".$row->grading_id);
		
		if($row->status=='1'){
		  $deleteurl = l("Disable","admin/dsje/del/grading/$row->grading_id/$row->grading_name");
        }else{
		  $deleteurl = l("Enable","admin/dsje/enable/grading/$row->grading_id/$row->grading_name");
		
		}


		if($row->status=='1'){
		       $st='Enabled';
		    }else{
			   $st ='Disabled';
			}
		$rows[] = array(
			
			array('data' => $counter),
			array('data' => ucwords($row->grading_name)),
			array('data' => $st),
			array('data' => $viewurl."|".$editurl."|".$deleteurl),
		);
	}
	$output .= theme_table($header,$rows, $attributes = array(), $caption = NULL);
	$output .= theme('pager', NULL, $limit,0 );
	return $output;
 }

