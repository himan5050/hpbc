function dsje_grading_access($op, $node, $account) {
	if($op == 'update' || $op == 'delete') {
		//&& ($account->uid == $node->uid)
		if (user_access('edit dsje_grading', $account) ) {
			return TRUE;
		}
	}
	if (($op=='create') && ($op='list')) {
		return user_access('create dsje_grading', $account);
	}
	if (($op=='view') or ($op=='list')) {
		return user_access('view dsje_grading', $account);
	}
	
}

