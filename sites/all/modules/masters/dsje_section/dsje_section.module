function dsje_section_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$section_id = $values['section_id'];
	$section_name = ParseData($values['section_name']);
	$prev_section_name = ParseData($values['prev_section_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('section_name',$section_name,'section');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_sections} where LOWER(section_name)= '".strtolower($section_name)."' GROUP BY section_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_section_name), strtolower($section_name))==0){
			db_query("UPDATE `tbl_sections` set `section_name` = '".$section_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where section_id='".$section_id."'");
			
			$message = getMessage('dsjesection', 'code05', array("0"=>$section_name));
			drupal_set_message($message);
			drupal_goto("admin/dsje/listsection");	
			
		}else{
			if($count==0){
				db_query("UPDATE `tbl_sections` set `section_name` = '".$section_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where section_id='".$section_id."'");
				
				$message = getMessage('dsjesection', 'code05', array("0"=>$section_name));
				drupal_set_message($message);
				drupal_goto("admin/dsje/listsection");	
			
			}else{
				db_query("UPDATE `tbl_sections` set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where section_id='".$section_id."'");
				
				$message = getMessage('dsjesection', 'code06', array("0"=>$section_name));
				form_set_error('section_name', $message);
			}
		}
	}
}

