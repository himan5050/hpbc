function viewcategory(){
global $user;
global $base_url;
$limit = (int)getMessage( 'recCastCategory', 'code04', NULL);
  
  $header = array(
		array('data' => t('S.No')),
        array('data' => t('Category'), 'field' => 'cast_category_name', 'sort' => 'asc'),
		array('data' => t('Status')),
		array('data' => t('Action')),
	);
	$breadcrumb = array();
    $breadcrumb[] = l('Home', '<front>');
   
    if($array[0] == '' ) {
     $breadcrumb[] = l('List Cast category', 'admin/rec/listcategory/'.$array[3].'');
	 }  
	 drupal_set_breadcrumb($breadcrumb);
	
   
    if(isset($_REQUEST['searchtext']) && $_REQUEST['searchtext']!=''){
    $val = '%'.strtoupper($_REQUEST['searchtext']).'%';	 
	 $query = "SELECT cast_category_id, cast_category_name, status FROM tbl_cast_categories where UPPER(cast_category_name) LIKE '".$val."' ".tablesort_sql($header);
	$sqlcount = "SELECT COUNT(*) AS count  FROM tbl_cast_categories where UPPER(cast_category_name) LIKE '".$val."' ".tablesort_sql($header);
	$rscount = db_query($sqlcount);
	$rscounter = db_fetch_object($rscount);
 }else{
    $query = "SELECT cast_category_id, cast_category_name, status FROM tbl_cast_categories ".tablesort_sql($header);
 }
 $output = '<form method="POST" action=""><table width="100%" border="0" cellspacing="1" cellpadding="1" id="wrapper">
	<tr><td colspan="3" class="tblHeaderLeft">';
	if(isset($_REQUEST['searchtext']) && $_REQUEST['searchtext']!=''){
	$output .= t(getMessage( 'recCastCategory', 'code03', array("0"=>$rscounter->count)))." | ".l('View All','admin/rec/listcategory');
	}
	
	$output .='</td><td colspan="3" class="tblHeaderRight">
	<input type="text" name="searchtext" value="'.$_POST['searchtext'].'">
	<input type="submit" name="search" value="Go"></td></tr>';
	
	$addurl = l(getMessage( 'recCastCategory', 'code01', NULL),"admin/rec/listcategory/addcategory");
   	$lising = getMessage( 'recCastCategory', 'code02', NULL);
		
	$output .='<tr>
	<td colspan="3" class="tblHeaderLeft">'.$lising.'</td>
	<td colspan="3" class="tblHeaderRight">'.$addurl.'</td>
	</tr>
	</table></form>';

	$result = pager_query($query, $limit);

	if($_REQUEST['page']){
     $counter = $_REQUEST['page']*$limit;
	}else{
	 $counter = 0;
    }
	while($row=db_fetch_object($result)) {
		$counter++;
		$editurl = l("Edit","admin/rec/listcategory/edit/category/".$row->cast_category_id,array('attributes'=>array('id'=>'edit-cast_category-id')));
		$viewurl = l("View","admin/rec/listcategory/view/category/".$row->cast_category_id);
		
		if($row->status=='1'){
		  $deleteurl = l("Disable","admin/rec/del/category/$row->cast_category_id/$row->cast_category_name");
        }else{
		  $deleteurl = l("Enable","admin/rec/enable/category/$row->cast_category_id/$row->cast_category_name");
		
		}


		if($row->status=='1'){
		       $st='Enabled';
		    }else{
			   $st ='Disabled';
			}
		$rows[] = array(
			
			array('data' => $counter),
			array('data' => ucwords($row->cast_category_name)),
			array('data' => $st),
			array('data' => $viewurl."|".$editurl."|".$deleteurl),
		);
	}
	$output .= theme_table($header,$rows, $attributes = array(), $caption = NULL);
	$output .= theme('pager', NULL, $limit,0 );
	return $output;
 }

