function category_delete($sid, $sno){
  $cast_category_id =  $sid;
  db_query("UPDATE {tbl_cast_categories} SET status=0 WHERE cast_category_id ='".$cast_category_id."'");
  $message = getMessage('recCastCategory', 'code07', array("0"=>$sno));
  drupal_set_message($message);
  drupal_goto("admin/rec/listcategory");
 }


  function category_enable($sid, $sno){
    $cast_category_id =  $sid;
    db_query("UPDATE {tbl_cast_categories} SET status=1 WHERE cast_category_id ='".$cast_category_id."'");
  
    $message = getMessage('recCastCategory', 'code09', array("0"=>$sno));
	drupal_set_message($message);
    drupal_goto("admin/rec/listcategory");
  }

