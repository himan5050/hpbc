function rec_category_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$cast_category_id = $values['cast_category_id'];
	$cast_category_name = ParseData($values['cast_category_name']);
	$prev_cast_category_name = ParseData($values['prev_cast_category_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('cast_category_name',$cast_category_name,'Cast Category');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_cast_categories} where LOWER(cast_category_name)= '".strtolower($cast_category_name)."' GROUP BY cast_category_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_cast_category_name), strtolower($cast_category_name))==0){
			db_query("UPDATE `tbl_cast_categories` set `cast_category_name` = '".$cast_category_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where cast_category_id='".$cast_category_id."'");
			
			$message = getMessage('recCastCategory', 'code05', array("0"=>$cast_category_name));
			drupal_set_message($message);
			drupal_goto("admin/rec/listcategory");	
			
		}else{
			if($count==0){
				db_query("UPDATE `tbl_cast_categories` set `cast_category_name` = '".$cast_category_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where cast_category_id='".$cast_category_id."'");
				
				$message = getMessage('recCastCategory', 'code05', array("0"=>$cast_category_name));
				drupal_set_message($message);
				drupal_goto("admin/rec/listcategory");	
			
			}else{
				db_query("UPDATE `tbl_cast_categories` set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where cast_category_id='".$cast_category_id."'");
				
				$message = getMessage('recCastCategory', 'code06', array("0"=>$cast_category_name));
				form_set_error('cast_category_name', $message);
			}
		}
	}
}

