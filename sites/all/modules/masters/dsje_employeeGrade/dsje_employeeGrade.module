function dsje_employeeGrade_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$employeeGrade_id = $values['employeeGrade_id'];
	$employeeGrade_name = ParseData($values['employeeGrade_name']);
	$prev_employeeGrade_name = ParseData($values['prev_employeeGrade_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('employeeGrade_name',$employeeGrade_name,'employeeGrade');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_employeegrades} where LOWER(employeeGrade_name)= '".strtolower($employeeGrade_name)."' GROUP BY employeeGrade_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_employeeGrade_name), strtolower($employeeGrade_name))==0){
			db_query("UPDATE `tbl_employeegrades` set `employeeGrade_name` = '".$employeeGrade_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where employeeGrade_id='".$employeeGrade_id."'");
			
			$message = getMessage('dsjeemployeeGrade', 'code11', array("0"=>$employeeGrade_name));
			drupal_set_message($message);
			drupal_goto("admin/dsje/listemployeeGrade");	
			
		}else{
			if($count==0){
				db_query("UPDATE `tbl_employeegrades` set `employeeGrade_name` = '".$employeeGrade_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where employeeGrade_id='".$employeeGrade_id."'");
				
				$message = getMessage('dsjeemployeeGrade', 'code05', array("0"=>$employeeGrade_name));
				drupal_set_message($message);
				drupal_goto("admin/dsje/listemployeeGrade");	
			
			}else{
				db_query("UPDATE `tbl_employeegrades` set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where employeeGrade_id='".$employeeGrade_id."'");
				
				$message = getMessage('dsjeemployeeGrade', 'code06', array("0"=>$employeeGrade_name));
				form_set_error('employeeGrade_name', $message);
			}
		}
	}
}

