function dsje_gender_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$gender_id = $values['gender_id'];
	$gender_name = ParseData($values['gender_name']);
	$prev_gender_name = ParseData($values['prev_gender_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('gender_name',$gender_name,'gender');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_genders} where LOWER(gender_name)= '".strtolower($gender_name)."' GROUP BY gender_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_gender_name), strtolower($gender_name))==0){
			db_query("UPDATE `tbl_genders` set `gender_name` = '".$gender_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where gender_id='".$gender_id."'");
			
			$message = getMessage('recgender', 'code05', array("0"=>$gender_name));
			drupal_set_message($message);
			drupal_goto("admin/rec/listgender");	
			
		}else{
			if($count==0){
				db_query("UPDATE `tbl_genders` set `gender_name` = '".$gender_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where gender_id='".$gender_id."'");
				
				$message = getMessage('recgender', 'code05', array("0"=>$gender_name));
				drupal_set_message($message);
				drupal_goto("admin/rec/listgender");	
			
			}else{
				db_query("UPDATE `tbl_genders` set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where gender_id='".$gender_id."'");
				
				$message = getMessage('recgender', 'code06', array("0"=>$gender_name));
				form_set_error('gender_name', $message);
			}
		}
	}
}

