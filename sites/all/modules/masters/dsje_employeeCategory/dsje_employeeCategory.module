function dsje_employeeCategory_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$employeeCategory_id = $values['employeeCategory_id'];
	$employeeCategory_name = ParseData($values['employeeCategory_name']);
	$prev_employeeCategory_name = ParseData($values['prev_employeeCategory_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('employeeCategory_name',$employeeCategory_name,'employeeCategory');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_employeeCategorys} where LOWER(employeeCategory_name)= '".strtolower($employeeCategory_name)."' GROUP BY employeeCategory_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_employeeCategory_name), strtolower($employeeCategory_name))==0){
			db_query("UPDATE `tbl_employeeCategorys` set `employeeCategory_name` = '".$employeeCategory_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where employeeCategory_id='".$employeeCategory_id."'");
			
			$message = getMessage('dsjeemployeeCategory', 'code05', array("0"=>$employeeCategory_name));
			drupal_set_message($message);
			drupal_goto("admin/dsje/listemployeeCategory");	
			
		}else{
			if($count==0){
				db_query("UPDATE `tbl_employeeCategorys` set `employeeCategory_name` = '".$employeeCategory_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where employeeCategory_id='".$employeeCategory_id."'");
				
				$message = getMessage('dsjeemployeeCategory', 'code05', array("0"=>$employeeCategory_name));
				drupal_set_message($message);
				drupal_goto("admin/dsje/listemployeeCategory");	
			
			}else{
				db_query("UPDATE `tbl_employeeCategorys` set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where employeeCategory_id='".$employeeCategory_id."'");
				
				$message = getMessage('dsjeemployeeCategory', 'code06', array("0"=>$employeeCategory_name));
				form_set_error('employeeCategory_name', $message);
			}
		}
	}
}

