function dsje_sector_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$sector_id = $values['sector_id'];
	$sector_name = ParseData($values['sector_name']);
	$prev_sector_name = ParseData($values['prev_sector_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('sector_name',$sector_name,'sector');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_sectors} where LOWER(sector_name)= '".strtolower($sector_name)."' GROUP BY sector_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_sector_name), strtolower($sector_name))==0){
			db_query("UPDATE {tbl_sectors} set `sector_name` = '".$sector_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where sector_id='".$sector_id."'");
			
			$message = getMessage('dsjesector', 'code11', array("0"=>$sector_name));
			drupal_set_message($message);
			drupal_goto("admin/dsje/listsector");	
			
		}else{
			if($count==0){
				db_query("UPDATE {tbl_sectors} set `sector_name` = '".$sector_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where sector_id='".$sector_id."'");
				
				$message = getMessage('dsjesector', 'code11', array("0"=>$sector_name));
				drupal_set_message($message);
				drupal_goto("admin/dsje/listsector");	
			
			}else{
				db_query("UPDATE {tbl_sectors} set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where sector_id='".$sector_id."'");
				
				$message = getMessage('dsjesector', 'code06', array("0"=>$sector_name));
				form_set_error('sector_name', $message);
			}
		}
	}
}

