function dsje_statusFixedAsset_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$statusFixedAsset_id = $values['statusFixedAsset_id'];
	$statusFixedAsset_name = ParseData($values['statusFixedAsset_name']);
	$prev_statusFixedAsset_name = ParseData($values['prev_statusFixedAsset_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('statusFixedAsset_name',$statusFixedAsset_name,'statusFixedAsset');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_statusFixedAssets} where LOWER(statusFixedAsset_name)= '".strtolower($statusFixedAsset_name)."' GROUP BY statusFixedAsset_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_statusFixedAsset_name), strtolower($statusFixedAsset_name))==0){
			db_query("UPDATE `tbl_statusFixedAssets` set `statusFixedAsset_name` = '".$statusFixedAsset_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where statusFixedAsset_id='".$statusFixedAsset_id."'");
			
			$message = getMessage( 'dsjestatusFixedAsset', 'code05', array("0"=>$statusFixedAsset_name));
			drupal_set_message($message);
			drupal_goto("admin/dsje/liststatusFixedAsset");	
			
		}else{
			if($count==0){
				db_query("UPDATE `tbl_statusFixedAssets` set `statusFixedAsset_name` = '".$statusFixedAsset_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where statusFixedAsset_id='".$statusFixedAsset_id."'");
				
				$message = getMessage( 'dsjestatusFixedAsset', 'code05', array("0"=>$statusFixedAsset_name));
				drupal_set_message($message);
				drupal_goto("admin/dsje/liststatusFixedAsset");	
			
			}else{
				db_query("UPDATE `tbl_statusFixedAssets` set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where statusFixedAsset_id='".$statusFixedAsset_id."'");
				
				$message = getMessage( 'dsjestatusFixedAsset', 'code06', array("0"=>$statusFixedAsset_name));
				form_set_error('statusFixedAsset_name', $message);
			}
		}
	}
}

