function dsje_court_name_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$court_name_id = $values['court_name_id'];
	$court_name_name = ParseData($values['court_name_name']);
	$courtaddress = ParseData(trim($values['courtaddress']));
	  $courttype = trim($values['courttype']);
	$prev_court_name_name = ParseData($values['prev_court_name_name']);
	$courtaddress = parseData(trim($values['courtaddress']));
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('court_name_name',$court_name_name,'court_name');
	$s1 = textonlywithdotne('courtaddress',$courtaddress, 'Court Address');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_court_names} where LOWER(court_name_name)= '".strtolower($court_name_name)."' GROUP BY court_name_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_court_name_name), strtolower($court_name_name))==0){
			db_query("UPDATE `tbl_court_names` set `court_name_name` = '".$court_name_name."' ,`courtaddress` = '".$courtaddress."' ,`courttype` = '".$courttype."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where court_name_id='".$court_name_id."'");
			
			$message = getMessage('dsjecourt_name', 'code10', array("0"=>$court_name_name));
			drupal_set_message($message);
			drupal_goto("admin/dsje/listcourt_name");	
			
		}else{
			if($count==0){
				db_query("UPDATE `tbl_court_names` set `court_name_name` = '".$court_name_name."' ,`courtaddress` = '".$courtaddress."' ,`courttype` = '".$courttype."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where court_name_id='".$court_name_id."'");
				
				$message = getMessage('dsjecourt_name', 'code10', array("0"=>$court_name_name));
				drupal_set_message($message);
				drupal_goto("admin/dsje/listcourt_name");	
			
			}else{
				db_query("UPDATE `tbl_court_names` set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where court_name_id='".$court_name_id."'");
				
				$message = getMessage('dsjecourt_name', 'code06', array("0"=>$court_name_name));
				form_set_error('court_name_name', $message);
			}
		}
	}
}

