function citizenship_delete($sid, $sno){
  $citizenship_id =  $sid;
  db_query("UPDATE {tbl_citizenships} SET status=0 WHERE citizenship_id ='".$citizenship_id."'");
  $message = getMessage('dsjecitizenship', 'code07', array("0"=>$sno));
  drupal_set_message($message);
  drupal_goto("admin/dsje/listcitizenship");
 }


  function citizenship_enable($sid, $sno){
    $citizenship_id =  $sid;
    db_query("UPDATE {tbl_citizenships} SET status=1 WHERE citizenship_id ='".$citizenship_id."'");
  
    $message = getMessage('dsjecitizenship', 'code09', array("0"=>$sno));
	drupal_set_message($message);
    drupal_goto("admin/dsje/listcitizenship");
  }

