function dsje_citizenship_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$citizenship_id = $values['citizenship_id'];
	$citizenship_name = ParseData($values['citizenship_name']);
	$prev_citizenship_name = ParseData($values['prev_citizenship_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('citizenship_name',$citizenship_name,'citizenship');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_citizenships} where LOWER(citizenship_name)= '".strtolower($citizenship_name)."' GROUP BY citizenship_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_citizenship_name), strtolower($citizenship_name))==0){
			db_query("UPDATE `tbl_citizenships` set `citizenship_name` = '".$citizenship_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where citizenship_id='".$citizenship_id."'");
			
			$message = getMessage('dsjecitizenship', 'code05', array("0"=>$citizenship_name));
			drupal_set_message($message);
			drupal_goto("admin/dsje/listcitizenship");	
			
		}else{
			if($count==0){
				db_query("UPDATE `tbl_citizenships` set `citizenship_name` = '".$citizenship_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where citizenship_id='".$citizenship_id."'");
				
				$message = getMessage('dsjecitizenship', 'code05', array("0"=>$citizenship_name));
				drupal_set_message($message);
				drupal_goto("admin/dsje/listcitizenship");	
			
			}else{
				db_query("UPDATE `tbl_citizenships` set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where citizenship_id='".$citizenship_id."'");
				
				$message = getMessage('dsjecitizenship', 'code06', array("0"=>$citizenship_name));
				form_set_error('citizenship_name', $message);
			}
		}
	}
}

