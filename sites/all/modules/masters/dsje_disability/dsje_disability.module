function dsje_disability_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$disability_id = $values['disability_id'];
	$disability_name = ParseData($values['disability_name']);
	$prev_disability_name = ParseData($values['prev_disability_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('disability_name',$disability_name,'disability');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_disabilitys} where LOWER(disability_name)= '".strtolower($disability_name)."' GROUP BY disability_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_disability_name), strtolower($disability_name))==0){
			db_query("UPDATE `tbl_disabilitys` set `disability_name` = '".$disability_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where disability_id='".$disability_id."'");
			
			$message = getMessage('dsjedisability', 'code05', array("0"=>$disability_name));
			drupal_set_message($message);
			drupal_goto("admin/dsje/listdisability");	
			
		}else{
			if($count==0){
				db_query("UPDATE `tbl_disabilitys` set `disability_name` = '".$disability_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where disability_id='".$disability_id."'");
				
				$message = getMessage('dsjedisability', 'code05', array("0"=>$disability_name));
				drupal_set_message($message);
				drupal_goto("admin/dsje/listdisability");	
			
			}else{
				db_query("UPDATE `tbl_disabilitys` set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where disability_id='".$disability_id."'");
				
				$message = getMessage('dsjedisability', 'code06', array("0"=>$disability_name));
				form_set_error('disability_name', $message);
			}
		}
	}
}

