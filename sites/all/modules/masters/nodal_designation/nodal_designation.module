function company_nodal_designation_delete($sid,$name){
  $designation_id = $sid;
  $sql = "SELECT designation_id FROM tbl_participant_master where designation_id='".$designation_id."' AND status=1";
  $res = db_query($sql);
  $rs = db_fetch_object($res);
  if($rs->designation_id){
    form_set_error('','The Designation'.$designation_name.' cannot be disabled as it has other entities mapped to it.');
  }else{
	  db_query("UPDATE `tbl_nodal_designation` SET status=0 WHERE designation_id='".$designation_id."'");
	  $message = "Designation".$designation_name." has been disabled successfully.";
	  drupal_set_message($message);
	  
  }
  drupal_goto('nodal_designation_list');
}

function company_nodal_designation_enable($sid,$name){
	  $nodal_designation = $sid;
