function nodal_designation_perm() {
	return array('edit nodal_designation','administer nodal_designation', 'create nodal_designation', 'view nodal_designation');
}

function nodal_designation_access($op, $node, $account) {
	if($op == 'update' || $op == 'delete') {
		//&& ($account->uid == $node->uid)
		if (user_access('edit nodal_designation', $account) ) {
			return TRUE;
		}
	}
	if (($op=='create') && ($op='list')) {
		return user_access('create nodal_designation', $account);
	}
	if (($op=='view') or ($op=='list')) {
		return user_access('view nodal_designation', $account);
	}
	
}

