/**
 listing designation
 */
 function viewdesignation(){
 global $user;
	global $base_url;
	global $xpathObj;
	$limit = (int)getMessage('recDesignation', 'code04', NULL);

   
  $header = array(
		array('data' => t('S. No.')),
        array('data' => t('Designation Name'), 'field' => 'designation_name', 'sort' => 'asc'),
		////array('data' => t('Remarks')),
	    array('data' => t('Status')),
		array('data' => t('Action')),
	);
	$breadcrumb = array();
    $breadcrumb[] = l('Home', '<front>');
   
    if($array[0] == '' ) {
     $breadcrumb[] = l('List designation', 'admin/rec/listdesignation/'.$array[3].'');
	 }  
	 drupal_set_breadcrumb($breadcrumb);
	if(isset($_REQUEST['searchtext']) && $_REQUEST['searchtext']!=''){
		$val = '%'.strtoupper($_REQUEST['searchtext']).'%';	 
		$query = "SELECT designation_id, designation_name, remarks, status FROM tbl_designations where  UPPER(designation_name) LIKE '".$val."'".tablesort_sql($header);
        $sqlcount = "SELECT COUNT(*) AS count FROM tbl_designations where  UPPER(designation_name) LIKE '".$val."'".tablesort_sql($header);
		$rscount = db_query($sqlcount);
		$rscounter = db_fetch_object($rscount);
	}else{
	  	$query = "SELECT designation_id, designation_name, remarks, status FROM tbl_designations".tablesort_sql($header);
	}

	$output = '<form method="POST" action=""><table width="100%" border="0" cellspacing="1" cellpadding="1" id="wrapper">
	<tr><td colspan="3" class="tblHeaderLeft">';
	if(isset($_REQUEST['searchtext']) && $_REQUEST['searchtext']!=''){
	$output .= t(getMessage('recDesignation', 'code03', array("0"=>$rscounter->count)))." | ".l('View All','admin/rec/listdesignation');
	}
	
	$output .='</td><td colspan="3" class="tblHeaderRight">
	<input type="text" name="searchtext" value="'.$_POST['searchtext'].'">
	<input type="submit" name="search" value="Go"></td></tr>';
	
	$addurl = l(getMessage('recDesignation', 'code01', NULL),"admin/rec/listdesignation/adddesignation");
   	$lising = getMessage('recDesignation', 'code02', NULL);
		
	$output .='<tr>
	<td colspan="3" class="tblHeaderLeft">'.$lising.'</td>
	<td colspan="3" class="tblHeaderRight">'.$addurl.'</td>
	</tr>
	</table></form>';
	$result = pager_query($query,$limit);
	
	if($_REQUEST['page']){
     $counter = $_REQUEST['page']*$limit;
	}else{
	 $counter = 0;
    }
	while($row=db_fetch_object($result)) {
		$counter++;
		$editurl = l("Edit","admin/rec/listdesignation/edit/designation/".$row->designation_id,array('attributes'=>array('id'=>'edit-designation')));
		$viewurl = l("View","admin/rec/listdesignation/view/designation/".$row->designation_id,array('attributes'=>array('id'=>'edit-designation')));
     if($row->status=='1'){
		$deleteurl = l("Disable","admin/rec/del/designation/".$row->designation_id."/".$row->designation_name);
     }else{
		$deleteurl = l("Enable","admin/rec/enable/designation/".$row->designation_id."/".$row->designation_name);
     }
		if($row->status=='1'){
		       $st='Enabled';
		    }else{
			   $st ='Disabled';
			}
		$rows[] = array(
			
			array('data' => $counter),
			array('data' => ucwords($row->designation_name)),
		//	array('data' => ucfirst($row->remarks)),
			array('data' => $st),
			array('data' => $viewurl."|".$editurl."|".$deleteurl),
		);
	}
	$output .= theme_table($header,$rows, $attributes = array(), $caption = NULL);
	$output .= theme('pager', NULL, $limit,0 );
	return $output;
 }


