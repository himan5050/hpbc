function rec_designation_access($op, $node, $account) {
	if($op == 'update' || $op == 'delete') {
		//&& ($account->uid == $node->uid)
		if (user_access('edit rec_designation', $account) ) {
			return TRUE;
		}
	}
	if (($op=='create') && ($op='list')) {
		return user_access('create rec_designation', $account);
	}
	if (($op=='view') or ($op=='list')) {
		return user_access('view rec_designation', $account);
	}
	
}

