function dsje_month_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$month_id = $values['month_id'];
	$month_name = ParseData($values['month_name']);
	$prev_month_name = ParseData($values['prev_month_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('month_name',$month_name,'month');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_months} where LOWER(month_name)= '".strtolower($month_name)."' GROUP BY month_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_month_name), strtolower($month_name))==0){
			db_query("UPDATE `tbl_months` set `month_name` = '".$month_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where month_id='".$month_id."'");
			
			$message = getMessage('dsjemonth', 'code05', array("0"=>$month_name));
			drupal_set_message($message);
			drupal_goto("admin/dsje/listmonth");	
			
		}else{
			if($count==0){
				db_query("UPDATE `tbl_months` set `month_name` = '".$month_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where month_id='".$month_id."'");
				
				$message = getMessage('dsjemonth', 'code05', array("0"=>$month_name));
				drupal_set_message($message);
				drupal_goto("admin/dsje/listmonth");	
			
			}else{
				db_query("UPDATE `tbl_months` set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where month_id='".$month_id."'");
				
				$message = getMessage('dsjemonth', 'code06', array("0"=>$month_name));
				form_set_error('month_name', $message);
			}
		}
	}
}

