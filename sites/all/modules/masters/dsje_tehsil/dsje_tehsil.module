function dsje_tehsil_form_submit($form, &$form_state) {
	global $user;
	$values = $form_state['values'];
    $state_id =$values['state_id'];
    $district_id = $values['district_id'];
    $tehsil_name = trim($values['tehsil_name']);
	//$state_uid = trim($values['state_uid']);
	//$state_union_territory = parseData(trim($values['state_union_territory']));
    $remarks = parseData(trim($values['remarks']));
    $status = $values['status'];
	$status = 1;
	$createdby = $user->uid;
	$createdon = time();
	$updatedby = $user->uid;
	$updatedon = $createdon;
     
	 if($district_id == '')
	 { form_set_error($district_id,t('District field is requried'));}
	 else{
   db_query("INSERT INTO {tbl_tehsil} (`tehsil_name`, `remarks` ,`state_id` ,`district_id` , `status` ,`createdby` ,`createdon` ,`updatedby` ,`updatedon`) VALUES('".$tehsil_name."', '".$remarks."','".$state_id."','".$district_id."','".$status."','".$createdby."','".$createdon."','".$updatedby."','".$updatedon."') ");
	$message = getMessage('dsjetehsil', 'code05', array("0"=>$tehsil_name));
	drupal_set_message($message);
	drupal_goto('dsje/listtehsil');
}}

