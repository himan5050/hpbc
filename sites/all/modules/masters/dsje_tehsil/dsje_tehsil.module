	return $output;
}


function mydistrict() {
    $state_id = $_POST['state_id'];
    settype($state_id, 'integer');
	$query = sprintf("SELECT district_id, district_name FROM {tbl_district} WHERE state_id = %d  AND status='1' ORDER BY district_name",db_escape_string($state_id));
	//$query = "SELECT district_id, district_name FROM {tbl_district} WHERE state_id = '$state_id' AND status='1' ORDER BY district_name";
	$result = db_query($query);
	$zonearray = array();
	$zonearray[''] = "--Select--";
	$counter = 0;
	while($row=db_fetch_object($result)) {
		$zonearray[$row->district_id] = ucwords($row->district_name);
		$counter++;
	}
	if($counter==0) {
		$zonearray[''] = "--Select--";
	}
	$form_state = array('submitted' => FALSE);
	$form_build_id = $_POST['form_build_id'];
    settype($form_build_id, 'integer');
	$form = form_builder('dsje_tehsil_form', $form, $form_state);
	$form['district_id'] = array(
		'#type' => 'select',
		'#title' => t('District'),
		'#required' => TRUE,
		'#default_value' => '',
		'#options' => $zonearray,
		'#id' => 'edit-district-id',
		'#name' => 'district_id',
		'#attributes' => array('name' => 'district_id'),
		'#ahah' => array(
						  'path' => 'rec/tehsil',
						  'method' => 'replace',
						  'effect' => 'slide',
						  'wrapper' =>'state',
						  ), 
	
	);
	$output = drupal_render($form['district_id']);
	return drupal_json(array('status' => TRUE, 'data' => $output));
}






  
