function dsje_tehsil_access($op, $node, $account) {
	if($op == 'update' || $op == 'delete') {
		//&& ($account->uid == $node->uid)
		if (user_access('edit dsje_tehsil', $account) ) {
			return TRUE;
		}
	}
	if (($op=='create') && ($op='list')) {
		return user_access('create dsje_tehsil', $account);
	}
	if (($op=='view') or ($op=='list')) {
		return user_access('view dsje_tehsil', $account);
	}
}

