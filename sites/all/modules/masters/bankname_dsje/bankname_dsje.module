function bankname_dsje_access($op, $node, $account) {
	if($op == 'update' || $op == 'delete') {
		//&& ($account->uid == $node->uid)
		if (user_access('edit bankname_dsje', $account) ) {
			return TRUE;
		}
	}
	if (($op=='create') && ($op='list')) {
		return user_access('create bankname_dsje', $account);
	}
	if (($op=='view') or ($op=='list')) {
		return user_access('view bankname_dsje', $account);
	}
	
}

