/**
 listing designation
 */
 function viewbankname(){
 global $user;
	global $base_url;
	global $xpathObj;
	$limit = (int)getMessage('recbankname', 'code04', NULL);

   
  $header = array(
		array('data' => t('S.No')),
        array('data' => t('Bank Name'), 'field' => 'bank_name', 'sort' => 'asc'),
		array('data' => t('Remarks')),
	    array('data' => t('Status')),
		array('data' => t('Action')),
	);
	if(isset($_REQUEST['searchtext']) && $_REQUEST['searchtext']!=''){
		$val = '%'.strtoupper($_REQUEST['searchtext']).'%';	 
		$query = "SELECT bankname_id, bank_name, remarks, status FROM tbl_bankname where  UPPER(bank_name) LIKE '".$val."'".tablesort_sql($header);
        $sqlcount = "SELECT COUNT(*) AS count FROM tbl_bankname where  UPPER(bank_name) LIKE '".$val."'".tablesort_sql($header);
		$rscount = db_query($sqlcount);
		$rscounter = db_fetch_object($rscount);
	}else{
	  	$query = "SELECT bankname_id, bank_name, remarks, status FROM tbl_bankname".tablesort_sql($header);
	}

	$output = '<form method="POST" action=""><table width="100%" border="0" cellspacing="1" cellpadding="1" id="wrapper">
	<tr><td colspan="3" class="tblHeaderLeft">';
	if(isset($_REQUEST['searchtext']) && $_REQUEST['searchtext']!=''){
	$output .= t(getMessage('bankname', 'code03', array("0"=>$rscounter->count)))." | ".l('View All','admin/rec/listbank');
	}
	
	$output .='</td><td colspan="3" class="tblHeaderRight">
	<input type="text" name="searchtext" value="'.$_POST['searchtext'].'">
	<input type="submit" name="search" value="Go"></td></tr>';
	
	$addurl = l(getMessage('bankname', 'code01', NULL),"admin/rec/listbank/addbank");
   	$lising = getMessage('bankname', 'code02', NULL);
		
	$output .='<tr>
	<td colspan="3" class="tblHeaderLeft">'.$lising.'</td>
	<td colspan="3" class="tblHeaderRight">'.$addurl.'</td>
	</tr>
	</table></form>';
	$result = pager_query($query,$limit);
	
	if($_REQUEST['page']){
     $counter = $_REQUEST['page']*$limit;
	}else{
	 $counter = 0;
    }
	while($row=db_fetch_object($result)) {
		$counter++;
		$editurl = l("Edit","admin/rec/listbank/edit/bankname/".$row->bankname_id,array('attributes'=>array('id'=>'edit-bankname')));
		$viewurl = l("View","admin/rec/listbank/view/bankname/".$row->bankname_id,array('attributes'=>array('id'=>'edit-bankname')));
     if($row->status=='1'){
		$deleteurl = l("Disable","admin/rec/del/bankname/".$row->bankname_id."/".$row->bank_name);
     }else{
		$deleteurl = l("Enable","admin/rec/enable/bankname/".$row->bankname_id."/".$row->bank_name);
     }
		if($row->status=='1'){
		       $st='Enabled';
		    }else{
			   $st ='Disabled';
			}
		$rows[] = array(
			
			array('data' => $counter),
			array('data' => ucwords($row->bank_name)),
			array('data' => ucwords($row->remarks)),
			array('data' => $st),
			array('data' => $viewurl."|".$editurl."|".$deleteurl),
		);
	}
	$output .= theme_table($header,$rows, $attributes = array(), $caption = NULL);
	$output .= theme('pager', NULL, $limit,0 );
	return $output;
 }


