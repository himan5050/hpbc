function dsje_payType_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$payType_id = $values['payType_id'];
	$payType_name = ParseData($values['payType_name']);
	$prev_payType_name = ParseData($values['prev_payType_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('payType_name',$payType_name,'payType');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_dsje_payTypes} where LOWER(payType_name)= '".strtolower($payType_name)."' GROUP BY payType_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_payType_name), strtolower($payType_name))==0){
			db_query("UPDATE `tbl_dsje_payTypes` set `payType_name` = '".$payType_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where payType_id='".$payType_id."'");
			
			$message = getMessage('dsjepayType', 'code05', array("0"=>$payType_name));
			drupal_set_message($message);
			drupal_goto("admin/dsje/listpayType");	
			
		}else{
			if($count==0){
				db_query("UPDATE `tbl_dsje_payTypes` set `payType_name` = '".$payType_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where payType_id='".$payType_id."'");
				
				$message = getMessage('dsjepayType', 'code05', array("0"=>$payType_name));
				drupal_set_message($message);
				drupal_goto("admin/dsje/listpayType");	
			
			}else{
				db_query("UPDATE `tbl_dsje_payTypes` set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where payType_id='".$payType_id."'");
				
				$message = getMessage('dsjepayType', 'code06', array("0"=>$payType_name));
				form_set_error('payType_name', $message);
			}
		}
	}
}

