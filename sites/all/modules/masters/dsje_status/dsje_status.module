function dsje_status_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$status_id = $values['status_id'];
	$status_name = ParseData($values['status_name']);
	$prev_status_name = ParseData($values['prev_status_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('status_name',$status_name,'status');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_statuses} where LOWER(status_name)= '".strtolower($status_name)."' GROUP BY status_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_status_name), strtolower($status_name))==0){
			db_query("UPDATE `tbl_statuses` set `status_name` = '".$status_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where status_id='".$status_id."'");
			
			$message = getMessage('dsjestatus', 'code05', array("0"=>$status_name));
			drupal_set_message($message);
			drupal_goto("admin/dsje/liststatus");	
			
		}else{
			if($count==0){
				db_query("UPDATE `tbl_statuses` set `status_name` = '".$status_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where status_id='".$status_id."'");
				
				$message = getMessage('dsjestatus', 'code05', array("0"=>$status_name));
				drupal_set_message($message);
				drupal_goto("admin/dsje/liststatus");	
			
			}else{
				db_query("UPDATE `tbl_statuses` set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where status_id='".$status_id."'");
				
				$message = getMessage('dsjestatus', 'code06', array("0"=>$status_name));
				form_set_error('status_name', $message);
			}
		}
	}
}

