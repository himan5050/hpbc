function dsje_post_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$post_id = $values['post_id'];
	$post_name = ParseData($values['post_name']);
	$prev_post_name = ParseData($values['prev_post_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('post_name',$post_name,'post');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_posts} where LOWER(post_name)= '".strtolower($post_name)."' GROUP BY post_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_post_name), strtolower($post_name))==0){
			db_query("UPDATE `tbl_posts` set `post_name` = '".$post_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where post_id='".$post_id."'");
			
			$message = getMessage('dsjepost', 'code05', array("0"=>$post_name));
			drupal_set_message($message);
			drupal_goto("admin/dsje/listpost");	
			
		}else{
			if($count==0){
				db_query("UPDATE `tbl_posts` set `post_name` = '".$post_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where post_id='".$post_id."'");
				
				$message = getMessage('dsjepost', 'code05', array("0"=>$post_name));
				drupal_set_message($message);
				drupal_goto("admin/dsje/listpost");	
			
			}else{
				db_query("UPDATE `tbl_posts` set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where post_id='".$post_id."'");
				
				$message = getMessage('dsjepost', 'code06', array("0"=>$post_name));
				form_set_error('post_name', $message);
			}
		}
	}
}

