function dsje_remittanceMode_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$remittanceMode_id = $values['remittanceMode_id'];
	$remittanceMode_name = ParseData($values['remittanceMode_name']);
	$prev_remittanceMode_name = ParseData($values['prev_remittanceMode_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('remittanceMode_name',$remittanceMode_name,'remittanceMode');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_remittanceModes} where LOWER(remittanceMode_name)= '".strtolower($remittanceMode_name)."' GROUP BY remittanceMode_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_remittanceMode_name), strtolower($remittanceMode_name))==0){
			db_query("UPDATE `tbl_remittanceModes` set `remittanceMode_name` = '".$remittanceMode_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where remittanceMode_id='".$remittanceMode_id."'");
			
			$message = getMessage('dsjeremittanceMode', 'code05', array("0"=>$remittanceMode_name));
			drupal_set_message($message);
			drupal_goto("admin/dsje/listremittanceMode");	
			
		}else{
			if($count==0){
				db_query("UPDATE `tbl_remittanceModes` set `remittanceMode_name` = '".$remittanceMode_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where remittanceMode_id='".$remittanceMode_id."'");
				
				$message = getMessage('dsjeremittanceMode', 'code05', array("0"=>$remittanceMode_name));
				drupal_set_message($message);
				drupal_goto("admin/dsje/listremittanceMode");	
			
			}else{
				db_query("UPDATE `tbl_remittanceModes` set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where remittanceMode_id='".$remittanceMode_id."'");
				
				$message = getMessage('dsjeremittanceMode', 'code06', array("0"=>$remittanceMode_name));
				form_set_error('remittanceMode_name', $message);
			}
		}
	}
}

