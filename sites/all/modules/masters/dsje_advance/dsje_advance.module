function dsje_advance_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$advance_id = $values['advance_id'];
	$advance_name = ParseData($values['advance_name']);
	$prev_advance_name = ParseData($values['prev_advance_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('advance_name',$advance_name,'advance');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_advances} where LOWER(advance_name)= '".strtolower($advance_name)."' GROUP BY advance_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_advance_name), strtolower($advance_name))==0){
			db_query("UPDATE `tbl_advances` set `advance_name` = '".$advance_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where advance_id='".$advance_id."'");
			
			$message = getMessage('dsjeadvance', 'code05', array("0"=>$advance_name));
			drupal_set_message($message);
			drupal_goto("admin/dsje/listadvance");	
			
		}else{
			if($count==0){
				db_query("UPDATE `tbl_advances` set `advance_name` = '".$advance_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where advance_id='".$advance_id."'");
				
				$message = getMessage('dsjeadvance', 'code05', array("0"=>$advance_name));
				drupal_set_message($message);
				drupal_goto("admin/dsje/listadvance");	
			
			}else{
				db_query("UPDATE `tbl_advances` set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where advance_id='".$advance_id."'");
				
				$message = getMessage('dsjeadvance', 'code06', array("0"=>$advance_name));
				form_set_error('advance_name', $message);
			}
		}
	}
}

