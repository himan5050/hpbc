function dsje_pension_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$pension_id = $values['pension_id'];
	$pension_name = ParseData($values['pension_name']);
	$prev_pension_name = ParseData($values['prev_pension_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('pension_name',$pension_name,'pension');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_pensions} where LOWER(pension_name)= '".strtolower($pension_name)."' GROUP BY pension_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_pension_name), strtolower($pension_name))==0){
			db_query("UPDATE `tbl_pensions` set `pension_name` = '".$pension_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where pension_id='".$pension_id."'");
			
			$message = getMessage('dsjepension', 'code05', array("0"=>$pension_name));
			drupal_set_message($message);
			drupal_goto("admin/dsje/listpension");	
			
		}else{
			if($count==0){
				db_query("UPDATE `tbl_pensions` set `pension_name` = '".$pension_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where pension_id='".$pension_id."'");
				
				$message = getMessage('dsjepension', 'code05', array("0"=>$pension_name));
				drupal_set_message($message);
				drupal_goto("admin/dsje/listpension");	
			
			}else{
				db_query("UPDATE `tbl_pensions` set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where pension_id='".$pension_id."'");
				
				$message = getMessage('dsjepension', 'code06', array("0"=>$pension_name));
				form_set_error('pension_name', $message);
			}
		}
	}
}

