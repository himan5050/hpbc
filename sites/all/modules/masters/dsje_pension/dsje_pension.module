function dsje_pension_access($op, $node, $account) {
	if($op == 'update' || $op == 'delete') {
		//&& ($account->uid == $node->uid)
		if (user_access('edit dsje_pension', $account) ) {
			return TRUE;
		}
	}
	if (($op=='create') && ($op='list')) {
		return user_access('create dsje_pension', $account);
	}
	if (($op=='view') or ($op=='list')) {
		return user_access('view dsje_pension', $account);
	}
	
}

