function dsje_loanDoc_form_edit_submit($form, &$form_state) {
	global $user;
	
	$values = $form_state['values'];
    $status = $values['status'];
	$loanDoc_id = $values['loanDoc_id'];
	$loanDoc_name = ParseData($values['loanDoc_name']);
	$prev_loanDoc_name = ParseData($values['prev_loanDoc_name']);
	$remarks = parseData($values['remarks']);
	$updatedby = $user->uid;
	$updatedon = time();
	
	$s = textonlyn('loanDoc_name',$loanDoc_name,'loanDoc');
	$s1 = textonlywithdotne('remarks',$remarks, 'Remarks');
	
	if($s == 0 && $s1 == 0){
	
		$countObj = db_fetch_object(db_query("SELECT COUNT(*) AS count FROM {tbl_loandocs} where LOWER(loanDoc_name)= '".strtolower($loanDoc_name)."' GROUP BY loanDoc_id"));
		$count = $countObj->count;
		
		if( strcmp(strtolower($prev_loanDoc_name), strtolower($loanDoc_name))==0){
			db_query("UPDATE {tbl_loandocs} set `loanDoc_name` = '".$loanDoc_name."' ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where loanDoc_id='".$loanDoc_id."'");
			
			$message = getMessage('dsjeloanDoc', 'code11', array("0"=>$loanDoc_name));
			drupal_set_message($message);
			drupal_goto("admin/dsje/listloanDoc");	
			
		}else{
			if($count==0){
				db_query("UPDATE {tbl_loandocs} set `loanDoc_name` = '".$loanDoc_name."'  ,`updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where loanDoc_id='".$loanDoc_id."'");
				
				$message = getMessage('dsjeloanDoc', 'code11', array("0"=>$loanDoc_name));
				drupal_set_message($message);
				drupal_goto("admin/dsje/listloanDoc");	
			
			}else{
				db_query("UPDATE {tbl_loandocs} set `updatedby`='".$updatedby."' ,`updatedon`='".$updatedon."',remarks='".$remarks."' where loanDoc_id='".$loanDoc_id."'");
				
				$message = getMessage('dsjeloanDoc', 'code06', array("0"=>$loanDoc_name));
				form_set_error('loanDoc_name', $message);
			}
		}
	}
}

