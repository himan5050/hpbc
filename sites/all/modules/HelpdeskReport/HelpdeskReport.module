function HelpdeskReport_form_validate($form, &$form_state){
	
	$values = $form_state['values'];
	
	$from_date = $values['from_date'];
	$to_date = $values['to_date'];
	$diary_no = $values['diary_no'];
	if(!empty($to_date)){
	if($from_date>$to_date){form_set_error(to_date,t('To Date should be greater than From Date'));}
	}
	
}



