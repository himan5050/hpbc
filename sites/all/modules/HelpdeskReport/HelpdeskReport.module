 function HelpdeskReport_init() {
	drupal_add_css(drupal_get_path('module', 'HelpdeskReport') .'/report_style.css');
	
}

function HelpdeskReport_perm() {
	return array('edit HelpdeskReport','administer HelpdeskReport', 'create HelpdeskReport', 'view HelpdeskReport');
}

function HelpdeskReport_access($op, $node, $account) {
	if($op == 'update' || $op == 'delete') {
		//&& ($account->uid == $node->uid)
		if (user_access('edit HelpdeskReport', $account) ) {
			return TRUE;
		}
	}
	if (($op=='create') && ($op='list')) {
		return user_access('create HelpdeskReport', $account);
	}
	if (($op=='view') or ($op=='list')) {
		return user_access('view HelpdeskReport', $account);
	}
	
}


