function disbursementreport_perm() {
	return array('edit disbursementreport','administer disbursementreport', 'create disbursementreport', 'view disbursementreport');
}

function disbursementreport_access($op, $node, $account) {
	if($op == 'update' || $op == 'delete') {
		//&& ($account->uid == $node->uid)
		if (user_access('edit disbursementreport', $account) ) {
			return TRUE;
		}
	}
	if (($op=='create') && ($op='list')) {
		return user_access('create disbursementreport', $account);
	}
	if (($op=='view') or ($op=='list')) {
		return user_access('view disbursementreport', $account);
	}
	
}


